Public Class circle
    Private rad As Integer
    Private area, perimeter As Double
    Public Sub New()
        Console.Writeline("OBject has been created")
        rad =7
        End Sub
    Public Sub getdimension()
      'Constructor
      Console.WriteLine("Enter the radius")
        rad = CInt(Console.ReadLine())

    End Sub
    Public Function computearea() As Double
        area = Math.PI * Math.Pow(rad, 2)
        Return area
    End Function

    Public Function computeperimeter() As Double
        perimeter = Math.PI * rad * 2
        Return perimeter
    End Function

    Public Sub print()
        Console.WriteLine("Area= " & computearea())
        Console.WriteLine("perimeter= " & computeperimeter())

    End Sub
End Class

Module module1
    Sub main()
        Dim cir1 As circle = new circle()
        'cir1.getdimension()
        cir1.print()
        Console.ReadKey()

    End Sub
End Module  
